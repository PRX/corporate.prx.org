{.main-image?}
  <li class="{.if customContent.artworkBorder}artwork-border{.end}">
    <a {.if sourceUrl}href="{sourceUrl}"{.end}>
      <img class=show-artwork {@|image-meta} />

      <span class=show-morsel>
        {.if customContent.audioPreviewUrl}
          <img class=program-audio-preview-control src=/assets/volume.svg data-audio-url="{customContent.audioPreviewUrl}">
        {.end}
      </span>
    </a>
  </li>
{.end}
