{.section collection}
  <div id=prx-index-list-services class=prx-index-list>
    {.section collections}
      <nav>
        {.repeated section @}
          <a href="#{urlId}">{title}</a>
        {.end}
      </nav>
    {.end}

    {.repeated section collections}
      <div id="{urlId}" class="prx-index-list-section {.section mainImage}prx-backdrop{.end}">
        {.section mainImage}<img {@|image-meta} class=prx-backdrop>{.end}

        <section data-content-field=main-content>{mainContent}</section>
      </div>
    {.end}
  </div>
{.end}
