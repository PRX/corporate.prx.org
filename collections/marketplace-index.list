{.section collection}
  <div class=prx-index-list>
    {.repeated section collections}
      <div class=prx-index-list-section>
        {.section mainImage}
          <img {@|image-meta} class=prx-splash>
        {.end}

        <section>{mainContent}</section>
      </div>
    {.end}
  </div>
{.end}
